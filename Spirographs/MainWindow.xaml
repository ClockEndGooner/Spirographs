<Window x:Class="Spirographs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkitLayout="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
        xmlns:toolkitInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"         
        xmlns:local="clr-namespace:Spirographs"        
        mc:Ignorable="d"
        Name="MainSpiroWindow" Title="Spirographs" ResizeMode="CanResizeWithGrip" 
        WindowStartupLocation="Manual" Width="Auto" Height="Auto" MinWidth="325" MinHeight="325"
        Background="#333333" Foreground="White" Icon="SpirographsIco.png" Loaded="OnMainWindowLoading" Closing="OnMainWindowClosing">
    <Window.Resources>
        <ContextMenu x:Key="SpiroContextMenu">
            <MenuItem Name="SettingsMenuItem" Header="Se_ttings..." Click="OnContextMenuItemClicked" 
                      ToolTip="Spirograph Settings..." />
            <MenuItem Name="SaveMenuItem" Header="_Save..."  Click="OnContextMenuItemClicked" 
                      ToolTip="Save Spirograph..." />
            <Separator />
            <MenuItem Name="AboutMenuItem" Header="_About..."  Click="OnContextMenuItemClicked" 
                      ToolTip="About Spirographs..." />
        </ContextMenu>    
    </Window.Resources>
    
    <Grid Name="MainLayoutGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Viewbox Name="CanvasViewbox" Grid.Row="0" Grid.Column="0" 
                 MouseRightButtonUp="OnRightMouseButtonClicked" Margin="0,4,0,36" Grid.RowSpan="2">
            <Canvas Name="SpiroCanvas" Background="#FFEEEEEE" 
                    MouseRightButtonUp="OnRightMouseButtonClicked" />
        </Viewbox>

        <ToolBarPanel Name="ButtonPanel" Grid.Row="1" HorizontalAlignment="Stretch" Background="#FF777777">
            <StackPanel Orientation="Horizontal" Background="#FF777777" HorizontalAlignment="Center">
                <Button Name="SettingsButton" Margin="4" Click="OnButtonClick" Width="32" Height="32"
                    Background="Black" Foreground="White" ToolTip="Spirograph Settings...">
                    <TextBlock Text="&#xE115;" FontFamily="Segoe UI Symbol" />
                </Button>
                <Button Name="SaveButton" Margin="4" Click="OnButtonClick" Width="32" Height="32"
                    Background="Black" Foreground="White" ToolTip="Save Spirograph...">
                    <TextBlock Text="&#xE159;" FontFamily="Segoe UI Symbol" />
                </Button>
                <Button Name="AboutButton" Margin="4" Click="OnButtonClick" Width="32" Height="32"
                    Background="Black" Foreground="White" ToolTip="About Spirographs...">
                    <TextBlock Text="?" FontFamily="Segoe UI Symbol" />
                </Button>
            </StackPanel>
        </ToolBarPanel>
    </Grid>
</Window>
